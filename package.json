{
    "name":                              "LiVE-Receiver",
    "homepage":                          "https://video-experience.live",
    "version":                           "1.12.0",
    "description":                       "Live Video Experience (LiVE) Receiver",
    "keywords":                          [ "live", "video", "experience", "receiver" ],
    "license":                           "GPL-3.0-only",
    "private":                           true,
    "author": {
        "name":                          "Dr. Ralf S. Engelschall",
        "email":                         "rse@engelschall.com",
        "url":                           "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":                      "14.0.1",
        "electron-builder":              "22.11.7",
        "nodemon":                       "2.0.12",
        "shelljs":                       "0.8.4",
        "glob":                          "7.1.7",
        "eslint":                        "7.32.0",
        "eslint-config-standard":        "16.0.3",
        "eslint-plugin-import":          "2.24.2",
        "eslint-plugin-node":            "11.1.0",
        "eslint-plugin-vue":             "7.18.0",
        "cross-env":                     "7.0.3",
        "cross-zip":                     "4.0.0",
        "npm-install-fetch":             "1.3.3",
        "npm-run-all":                   "4.1.5",
        "patch-package":                 "6.4.7",
        "modclean":                      "3.0.0-beta.1",
        "prompt-password":               "1.2.0",
        "json":                          "11.0.0",
        "vpg":                           "0.9.4"
    },
    "dependencies": {
        "electron-log":                  "4.4.1",
        "@rse/ffmpeg":                   "1.0.1",
        "jsonfile":                      "6.1.0",
        "syspath":                       "1.0.4",
        "execa":                         "5.1.1",
        "which":                         "2.0.2",
        "dayjs":                         "1.10.7",
        "mousetrap":                     "1.6.5",
        "vue":                           "2.6.14",
        "vue-multiselect":               "2.1.6",
        "v-tooltip":                     "2.1.3",
        "vue-i18n":                      "8.26.0",
        "js-yaml":                       "4.1.0",
        "cropperjs":                     "1.5.12",
        "jimp":                          "0.16.1",
        "hls.js":                        "0.14.17",
        "http-vue-loader":               "1.4.2",
        "less":                          "4.1.1",
        "@fortawesome/fontawesome-free": "5.15.4",
        "typopro-web":                   "4.2.5",
        "animejs":                       "3.2.1",
        "howler":                        "2.2.3",
        "audio-node-suite":              "0.9.7",
        "@rse/soundfx":                  "1.1.1",
        "throttle-debounce":             "3.0.1",
        "mp4box":                        "0.4.9",
        "mp4frag":                       "kevinGodell/mp4frag#0d17be2",
        "m3u8-parser":                   "4.7.0",
        "pure-uuid":                     "1.6.2",
        "image-data-uri":                "2.0.1",
        "update-helper":                 "1.1.5",
        "mqtt":                          "4.2.8",
        "got":                           "11.8.2",
        "adm-zip":                       "0.5.6",
        "tmp":                           "0.2.1",
        "mkdirp":                        "1.0.4",
        "dsig":                          "1.1.7",
        "hostid":                        "1.1.0",
        "rimraf":                        "3.0.2"
    },
    "upd":                               [ "!hls.js" ],
    "main":                              "./app-main.js",
    "build": {
        "appId":                         "com.engelschall.apps.live.receiver",
        "asar":                          true,
        "asarUnpack":                    [ "node_modules/@rse/ffmpeg/**" ],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "protocols": {
            "name":                      "LiVE Receiver",
            "schemes":                   [ "live" ]
        },
        "mac": {
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "app-res-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/nodemon/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/babel-eslint/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-install-fetch/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/modclean/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable", "arch": [ "x64" ] } ],
            "icon":                      "app-res-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/nodemon/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/babel-eslint/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-install-fetch/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/modclean/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage", "arch": [ "x64" ] } ],
            "executableName":            "LiVE-Receiver",
            "icon":                      "app-res-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/nodemon/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/babel-eslint/**",
                                         "!node_modules/eslint*/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/npm-install-fetch/**",
                                         "!node_modules/npm-run-all/**",
                                         "!node_modules/modclean/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "LiVE-Receiver.exe"
        }
    },
    "scripts": {
        "postinstall":                   "patch-package --patch-dir package.d && electron-builder install-app-deps && modclean -p . -r -P -n default:safe",
        "setup":                         "npm install --only-production --global-style",
        "lint":                          "eslint --config eslint.yaml --ext js,vue *.js *.vue",
        "start":                         "electron app-main.js",
        "start-dev":                     "cross-env DEBUG=1 nodemon --exec \"npm start\" --watch . --ext html,yaml,css,js,vue",
        "package":                       "node npm-package.js"
    }
}
